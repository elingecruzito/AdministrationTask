<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_view"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_view"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_post_add"
                android:tint="@color/blue_background"
                android:layout_marginRight="@dimen/padding_view"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeTitles"
                android:text="@string/lbl_title_new_task"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeLabelFields"
            android:text="@string/lbl_field_name_task"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/txt_new_name_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_fields"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeLabelFields"
            android:text="@string/lbl_field_date"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txt_date_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:background="@drawable/border_fields"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_view"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_modal_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:drawableStart="@drawable/ic_baseline_calendar"
                android:background="@drawable/border_buttom_modals"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeLabelFields"
            android:text="@string/lbl_field_hour"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/txt_date_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:background="@drawable/border_fields"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_view"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_modal_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:drawableStart="@drawable/ic_baseline_time"
                android:background="@drawable/border_buttom_modals"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_view"
        android:orientation="vertical"
        android:gravity="bottom">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_create_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_form_buttoms"
            android:theme="@style/ThemeFormButtons"
            android:text="@string/btn_create_task"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_view"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_form_buttoms_cancel"
            android:theme="@style/ThemeFormButtonsCancel"
            android:text="@string/btn_cancel"/>

    </LinearLayout>

</RelativeLayout>